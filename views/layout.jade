      .gm-style{font-family:Roboto,Arial,sans-serif;font-size:11px;font-weight:400;text-decoration:none}.gm-style img{max-width:none}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='/stylesheets/RISE/bootstrap-assets/css/bootstrap.min.css', rel='stylesheet')
    // Style
    link(href='/stylesheets/RISE/plugins/owl-carousel/owl.carousel.css', rel='stylesheet')
    link(href='/stylesheets/RISE/plugins/owl-carousel/owl.theme.css', rel='stylesheet')
    link(href='/stylesheets/RISE/plugins/owl-carousel/owl.transitions.css', rel='stylesheet')
    link(href='/stylesheets/RISE/plugins/Lightbox/dist/css/lightbox.css', rel='stylesheet')
    link(href='/stylesheets/RISE/plugins/Icons/et-line-font/style.css', rel='stylesheet')
    link(href='/stylesheets/RISE/plugins/animate.css/animate.css', rel='stylesheet')
    link(href='/stylesheets/RISE/css/main.css', rel='stylesheet')
    // Icons Font
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/stylesheets/RISE/bootstrap-assets/js/bootstrap.min.js')
